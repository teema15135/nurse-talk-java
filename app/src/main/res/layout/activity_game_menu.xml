<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameMenuActivity">



    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/bg_1"
        android:scaleType="centerCrop"/>

    <ImageButton
        android:id="@+id/back_game_menu"
        android:layout_width="@dimen/back_button_size"
        android:layout_height="@dimen/back_button_size"
        android:layout_margin="@dimen/back_button_margin"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:src="@drawable/back_w_light" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:gravity="center">

        <Button
            android:id="@+id/sentence_game_btn"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:background="@drawable/listen_me"
            android:textAllCaps="false"
            android:fontFamily="@font/nunito_bold"
            android:paddingHorizontal="10dp"
            android:textSize="20sp"
            android:textColor="@color/dark"
            android:text=""/>

        <Button
            android:id="@+id/vocab_game_btn"
            android:layout_marginTop="15dp"
            android:layout_width="200dp"
            android:paddingHorizontal="10dp"
            android:layout_height="70dp"
            android:textAllCaps="false"
            android:fontFamily="@font/nunito_bold"
            android:padding="10dp"
            android:background="@drawable/fill_fun"
            android:textSize="20sp"
            android:textColor="@color/dark"
            android:text=""/>



    </LinearLayout>

</RelativeLayout>