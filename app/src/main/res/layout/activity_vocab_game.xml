                    android:layout_marginRight="@dimen/vocab_game_key_button_margin"
                    android:padding="2dp"
                    android:text="A" />

                <Button
                    android:id="@+id/s_button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/selector_light_blue_round"
                    android:layout_marginRight="@dimen/vocab_game_key_button_margin"
                    android:padding="2dp"
                    android:text="S" />

                <Button
                    android:id="@+id/d_button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/selector_light_blue_round"
                    android:layout_marginRight="@dimen/vocab_game_key_button_margin"
                    android:padding="2dp"
                    android:text="D" />

                <Button
                    android:id="@+id/f_button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/selector_light_blue_round"
                    android:layout_marginRight="@dimen/vocab_game_key_button_margin"
                    android:padding="2dp"
                    android:text="F" />

                <Button
                    android:id="@+id/g_button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/selector_light_blue_round"
                    android:layout_marginRight="@dimen/vocab_game_key_button_margin"
                    android:padding="2dp"
                    android:text="G" />

                <Button
                    android:id="@+id/h_button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/selector_light_blue_round"
                    android:layout_marginRight="@dimen/vocab_game_key_button_margin"
                    android:padding="2dp"
                    android:text="H" />

                <Button
                    android:id="@+id/j_button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/selector_light_blue_round"
                    android:layout_marginRight="@dimen/vocab_game_key_button_margin"
                    android:padding="2dp"
                    android:text="J" />

                <Button
                    android:id="@+id/k_button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/selector_light_blue_round"
                    android:layout_marginRight="@dimen/vocab_game_key_button_margin"
                    android:padding="2dp"
                    android:text="K" />

                <Button
                    android:id="@+id/l_button"
                    android:layout_width="0dp"
