                    android:layout_weight="1"
                    android:background="@drawable/selector_light_blue_round"
                    android:layout_marginRight="@dimen/vocab_game_key_button_margin"
                    android:padding="2dp"
                    android:text="V" />

                <Button
                    android:id="@+id/b_button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/selector_light_blue_round"
                    android:layout_marginRight="@dimen/vocab_game_key_button_margin"
                    android:padding="2dp"
                    android:text="B" />

                <Button
                    android:id="@+id/n_button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/selector_light_blue_round"
                    android:layout_marginRight="@dimen/vocab_game_key_button_margin"
                    android:padding="2dp"
                    android:text="N" />

                <Button

                    android:id="@+id/m_button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/selector_light_blue_round"
                    android:layout_marginRight="@dimen/vocab_game_key_button_margin"
                    android:padding="2dp"
                    android:shadowColor="@color/dark_blue"
                    android:shadowDx="0"
                    android:shadowDy="3"
                    android:shadowRadius="4"
                    android:text="M" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>